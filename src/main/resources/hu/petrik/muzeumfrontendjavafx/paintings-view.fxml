<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.petrik.muzeumfrontendjavafx.controllers.PaintingsController">
    <HBox minHeight="30.0" prefHeight="30.0" spacing="10.0">
        <Button maxWidth="100.0" minWidth="100.0" mnemonicParsing="false" onAction="#onAddButtonClick"
                prefWidth="100.0" text="Add" />
        <Button maxWidth="100.0" minWidth="100.0" mnemonicParsing="false" onAction="#onUpdateButtonClick"
                prefWidth="100.0" text="Update" />
        <Button maxWidth="100.0" minWidth="100.0" mnemonicParsing="false" onAction="#onDeleteButtonClick"
                prefWidth="100.0" text="Delete" />
    </HBox>
    <TableView fx:id="paintingTable" minHeight="200.0" prefHeight="200.0" prefWidth="500.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="columnTitle" minWidth="50.0" prefWidth="200.0" text="Title" />
            <TableColumn fx:id="columnYear" minWidth="50.0" prefWidth="150.0" text="Year" />
            <TableColumn fx:id="columnOnDisplay" minWidth="50.0" prefWidth="120.0" text="On display" />
        </columns>
    </TableView>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
